<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/border"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:paddingBottom="@dimen/app_minor_padding"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="pasta a la pasta"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/close_btn"
        android:contentDescription="@string/button_hapus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/app_minor_padding"
        android:src="@drawable/ic_close"
        app:layout_constraintBottom_toBottomOf="@+id/food_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/food_name" />
    <TextView
        android:id="@+id/food_ingred"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="pizza, pizza, pizza"
        app:layout_constraintTop_toBottomOf="@id/food_name"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>